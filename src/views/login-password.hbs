{{> header }}
    <div class="container w-50">
        <div class="row justify-contents-center m-lg-5 p-lg-4">
            <div class="col">
                <div class="card border-success text-center">
                    <div class="card-header bg-success text-white p-3">
                        <h2 class="card-title mb-0">Sign Up</h2>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Please enter your new password</p>
                        <form action="">
                            <div>
                                <input type="password" name="password" class="form-control mx-auto w-75 mb-2" placeholder="Password" required="true">
                                <input type="password" name="password-confirmation" class="form-control mx-auto w-75 mb-2" placeholder="Re Password" required="true">
                                <input type="submit" class="btn btn-success mx-auto w-75 mb-2" value="Sign Up">
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{> footer }}